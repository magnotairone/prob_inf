on:
  push:
    branches:
      - main

name: Renderizar e Publicar Livro Quarto

jobs:
  build-deploy:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - name: Check out repository
        uses: actions/checkout@v4

      - name: Set up R
        uses: r-lib/actions/setup-r@v2
        with:
          r-version: 'latest' 

      - name: Install R Packages
        run: |
          R -e "install.packages(c('ggplot2', 'rmarkdown', 'knit', 'quarto', 'tidyverse', 'kableExtra'))"
          # Se vocÃª usar mais pacotes, adicione-os aqui.
          # Ex: R -e "install.packages(c('ggplot2', 'dplyr', 'readr'))"

      - name: Set up Quarto
        uses: quarto-dev/quarto-actions/setup@v2

      - name: Render Quarto Book
        uses: quarto-dev/quarto-actions/render@v2
        with:
          to: html

      - name: Publish to gh-pages
        uses: quarto-dev/quarto-actions/publish@v2
        with:
          target-branch: gh-pages
          dir: _book